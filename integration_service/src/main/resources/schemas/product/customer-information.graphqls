# Basic information on customers
type Customer {
    customerId: ID!
    gender: Gender
    firstName: String!
    lastName: String!
    street: String
    houseNumber: String
    top: String
    postalCode: String
    country: String!
    telephoneNumber: String
    emailAddress: String!
    reviews: [ProductReview!]
    network: [CustomerNetwork!]
}

enum Gender {
    MALE, FEMALE
}